---
import { getCollection } from "astro:content";
import Layout from "../layouts/Layout.astro";
import NavBar from "../components/NavBar.astro";
import ReleaseItem from "../components/ReleaseItem.astro";

const reviews = await getCollection('reviews');
const sortedReviews = reviews.sort((a,b)=> new Date(b.data.releaseDate).getTime() - new Date(a.data.releaseDate).getTime());
---

<Layout customTitle="all the releases" extraClass =" md:justify-start py-20">
    <NavBar></NavBar>
    <div class="flex flex-col items-start gap-4 px-8 md:px-16">
        {
            sortedReviews.map((review) => 
                <ReleaseItem review={review}></ReleaseItem>
                
            )
        }
    </div>
</Layout>
