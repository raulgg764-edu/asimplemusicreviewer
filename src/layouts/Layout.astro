---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
const {customTitle, extraClass} = Astro.props 
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>a simple music reviewer: {customTitle}</title>
		<ClientRouter></ClientRouter>
	</head>
	<body class:list={["w-full min-h-screen flex flex-col items-center",extraClass]}>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
