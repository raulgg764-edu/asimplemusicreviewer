---
import { ClientRouter } from "astro:transitions";
import "../styles/global.css";
const { customTitle, extraClass, color } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/home.svg" />
		<title>a simple music reviewer: {customTitle}</title>
		<ClientRouter />
	</head>
	<body
		class:list={[
			"w-full min-h-screen flex flex-col items-center bg-myColor",
			extraClass,
		]}
	>
		<slot />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		overscroll-behavior-y: none;
		/* Para Chrome, Safari y Edge (WebKit) */
		::-webkit-scrollbar {
			width: 8px;
			height: 8px;
		}

		::-webkit-scrollbar-track {
			background: transparent; /* Quita el fondo */
		}

		::-webkit-scrollbar-thumb {
			background-color: rgba(
				0,
				0,
				0,
				0.4
			); /* Cambia esto si quieres otro color */
			border-radius: 10px;
		}

		/* Para Firefox */
		* {
			scrollbar-width: thin; /* delgado */
			scrollbar-color: rgba(0, 0, 0, 0.4) transparent; /* thumb | track */
		}
	}
</style>
